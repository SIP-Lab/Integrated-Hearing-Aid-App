<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="com.superpowered.IntegratedApp.NoiseReductionSettings"
    android:focusable="true"
    android:focusableInTouchMode="true">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentTop="false"
        android:background="@color/custom_background"
        android:stretchColumns="0,1"
        android:shrinkColumns="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="@dimen/custom_view_height"
                android:gravity="center_vertical|left"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/background_light"
                android:text=" Sampling Frequency" />

            <TextView
                android:id="@+id/fsLabel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/custom_view_height"
                android:gravity="center_vertical|right"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/background_light"
                android:text="00 Hz " />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1dp">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/custom_view_height"
                android:gravity="center_vertical|left"
                android:layout_marginLeft="5dp"
                android:background="@android:color/background_light"
                android:text=" Window Size (ms)" />

            <TextView
                android:id="@+id/windowSizeLabel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/custom_view_height"
                android:gravity="center_vertical|right"
                android:layout_marginRight="5dp"
                android:background="@android:color/background_light"
                android:text="00.00 " />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="60dp">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="@dimen/custom_view_height"
                android:gravity="center_vertical|left"
                android:layout_marginLeft="5dp"
                android:background="@android:color/white"
                android:text=" Overlap Size (ms)" />

            <TextView
                android:id="@+id/overlapSizeLabel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/custom_view_height"
                android:gravity="center_vertical|right"
                android:layout_marginRight="5dp"
                android:background="@android:color/white"
                android:text="00.00 " />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="1dp">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" SPL Calibration (dB)" />

            <EditText
                android:id="@+id/splCalibration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:ems="10"
                android:gravity="left"
                android:inputType="number|numberSigned|numberDecimal"
                android:text="0.00" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1dp">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="@dimen/custom_view_height"
                android:gravity="center_vertical|left"
                android:layout_marginLeft="5dp"
                android:background="@android:color/white"
                android:text=" Audio Level" />

            <TextView
                android:id="@+id/audioLevel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/custom_view_height"
                android:gravity="center_vertical|right"
                android:layout_marginRight="5dp"
                android:background="@android:color/white"
                android:text="0.00 dB SPL " />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1dp">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="@dimen/custom_view_height"
                android:gravity="center_vertical|left"
                android:layout_marginLeft="5dp"
                android:background="@android:color/white"
                android:text=" Frame Processing Time" />

            <TextView
                android:id="@+id/frameProcTime"
                android:layout_width="match_parent"
                android:layout_height="@dimen/custom_view_height"
                android:gravity="center_vertical|right"
                android:layout_marginRight="5dp"
                android:background="@android:color/white"
                android:text="0.00 ms " />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="1dp">

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" GUI Update Rate (sec)" />

            <EditText
                android:id="@+id/guiUpdateRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="left"
                android:inputType="number|numberSigned|numberDecimal"
                android:text="0.00" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Noise Update Rate(sec)" />

            <EditText
                android:id="@+id/noiseUpdateRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="left"
                android:inputType="number|numberSigned|numberDecimal"
                android:text="0.00" />
        </TableRow>
    </TableLayout>
</RelativeLayout>